{
    "compilerOptions": {
        "target": "es2017",
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": true,
        "sourceMap": false,
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["*"],
            "/opt/nodejs/*": ["sam-aws-layer/aws/nodejs/*"]
        }
    },
    "exclude": ["node_modules", "**/*.test.ts"]
}
